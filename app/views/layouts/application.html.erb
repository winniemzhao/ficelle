<!DOCTYPE html>
<html>
  <head>
    <title>Ficelle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script src="https://kit.fontawesome.com/300f71314e.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />
  </head>

  <body>
    <div class="alert" data-controller="alert">
      <% flash.each do |type, msg| %>
        <% if type == "alert" %>
          <div class="alert flash flash-danger" role="alert" >
            <%= msg %>
            <a data-alert-target="popup" data-action="click->alert#connect" data-bs-dismiss="alert" aria-label="Close">

            </a>
          </div>
        <% elsif type == "notice" %>
          <div class="alert alert-dismissible flash flash-success fade show" role="alert">
            <%= msg %>
            <a data-alert-target="popup" data-action="click->alert#connect" data-bs-dismiss="alert" aria-label="Close">

            </a>
          </div>
            <% end %>
      <% end %>
    </div>
    <%= yield %>
    <% unless request.fullpath == events_loading_path || request.fullpath == root_path || request.fullpath == new_partner_path || request.fullpath == partners_path %>
      <%= render "shared/navbar" %>
    <% end %>
  </body>
</html>
