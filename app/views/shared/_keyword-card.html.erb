<% if keyword.photo.attached? %>
  <div class="keyword-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url('<%= cl_image_path keyword.photo.key, height: 100, crop: :fill %>')" data-controller="keywords">
<% else %>
  <div class="keyword-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url('<%= cl_image_path "../wtu1z51wksknvgrbgbie", width: 400, height: 300, crop: :fill %>')" data-controller="keywords">
<% end %>
  <h6><%= keyword.name %></h6>

  <p>
    <% if current_user.partner.keywords.include?(keyword) %>
      <i class="fa-solid fa-circle-check"></i>
    <% else %>
      <i class="fa-solid fa-circle-plus"></i>
    <% end %>
  </p>
</div>
