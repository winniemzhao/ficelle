<% url = keyword.photo.attached? ? (cl_image_path keyword.photo.key, height: 100, width: 100, crop: :fill) : "/assets/keyword_default.jpg" %>
<div class="keyword-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url(<%= url %>)"  data-controller="keywords" data-action="click->keywords#toggle" data-keyword_id="<%= keyword.id %>">
  <h6 data-keyword_id="<%= keyword.id %>"><%= keyword.name %></h6>

  <p>
    <% unless current_user.partner.nil? %>
      <% if current_user.partner.keywords.include?(keyword) %>
        <i data-keywords-target="span" data-keyword_id="<%= keyword.id %>" class="fa-solid fa-circle-check"></i>
      <% else %>
        <i data-keywords-target="span" data-keyword_id="<%= keyword.id %>" class="fa-solid fa-circle-plus"></i>
      <% end %>
    <% end %>
  </p>
</div>
