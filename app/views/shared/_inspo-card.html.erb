<div class="inspo-card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(<%= cl_image_path inspo.photo.key, height: 450, width: 350, crop: :fill %>)">

  <%#= inspo.photo.attached? ? cl_image_path inspo.photo.key, height: 450, width: 350, crop: :fill : cl_image_path 'wtu1z51wksknvgrbgbie', width: 400, height: 300, crop: :fill %>

  <div class="inspo-card-content">
    <div class="inspo-card-info">
      <h4><%= inspo.genre.capitalize %>: </h4>
      <h2><%= inspo.name %></h2>
    </div>
    <div class="inspo-card-buttons">
      <p class="dislike"><i class="fa-solid fa-xmark"></i></p>
      <%= link_to ('<i class="like"><i class="fa-solid fa-heart"></i></i>').html_safe, toggle_favorite_inspo_path(inspo), data: {turbo_method: :post} %>
    </div>
  </div>
</div>
