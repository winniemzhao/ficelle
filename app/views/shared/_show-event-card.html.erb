<div class="event-card d-none" data-edit-event-target="show">
  <div class="event-card-content">
    <% if event.pending? %>
      <p class="event-icon color-red">
        <i class="fa-solid fa-circle-exclamation"></i>
      </p>
    <% elsif event.confirmed? %>
      <p class="event-icon color-orange">
        <i class="fa-solid fa-calendar-check"></i>
      </p>
    <% elsif event.completed? %>
      <p class="event-icon color-blue">
        <i class="fa-regular fa-thumbs-up"></i>
      </p>
    <% end %>
    <div class="event-card-info">
      <h6>
        <%= event.inspo.name %>
        <% if event.inspo.genre == "date" %>
          <i class="fa-solid fa-people-pulling"></i>
        <% elsif event.inspo.genre == "gift" %>
          <i class="fa-solid fa-gift"></i>
        <% elsif event.inspo.genre == "text" %>
          <i class="fa-solid fa-people-pulling"></i>
        <% end %>
      </h6>
      <p>
        <% if event.pending? %>
          Pending confirmation
        <% elsif event.confirmed? %>
          Scheduled
        <% elsif event.completed? %>
          Completed
        <% end %>
      </p>
    </div>
    <p data-action="click->edit-event#hideShowConfirmed" data-action="click->edit-event#hideShowCompleted"><i class="fa-solid fa-xmark"></i></p>
  </div>
  <div class="event-description">
    <p>Content: <%= event.inspo.content %></p>
    <p>Genre: <%= event.inspo.genre.capitalize %></p>
    <p>Date: <%= event.date.strftime("%A, %b %e") %></p>
    <p>Location: <%= event.inspo.location %></p>
    <p>Cost: $<%= event.inspo.cost %></p>
    <%= link_to "Delete Event",
      dashboard_path,
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-flat"
    %>
  </div>
</div>
