<div class="event-card pending-event" data-edit-event-target="pending" id="event-<%= event.id %>">
  <div class="event-card-content">
    <p class="event-icon color-red"><i class="fa-solid fa-circle-exclamation"></i></p>
    <div class="event-card-info">
      <h6>
        <%= event.inspo.name %>
        <% if event.inspo.genre == "date" %>
          <i class="fa-solid fa-people-pulling"></i>
        <% elsif event.inspo.genre == "gift" %>
          <i class="fa-solid fa-gift"></i>
        <% elsif event.inspo.genre == "text" %>
          <i class="fa-solid fa-people-pulling"></i>
        <% end %>
      </h6>
      <p>Pending Confirmation</p>
    </div>
    <p><i class="fa-solid fa-ellipsis" data-action="click->edit-event#revealEdit" id="event-<%= event.id %>"></i></p>
  </div>
</div>
