<div class="banner">
  <h1>Good Evening, <% current_user.name %></h1>
</div>
<div class="wrapper">
  <ul data-controller="edit-event">
    <% @events.each do |event| %>
      <% if event.pending? %>
        <%= render "shared/event-card-pending", event: event %>
        <%= render "shared/edit-event-card", event: event %>
      <% elsif event.confirmed? %>
        <%= render "shared/event-card-completed", event: event %>
        <%= render "shared/show-event-card", event: event %>
      <% elsif event.completed? %>
        <%= render "shared/event-card-confirmed", event: event %>
        <%= render "shared/show-event-card", event: event %>
      <% end %>
    <% end %>
  </ul>

<div style="position: absolute; right: 0px; bottom: 60px;">
  <%= button_to("Log Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light") %>
</div>

</div>
