<div class="banner">
  <div>
    <h4>
      Settings
    </h4>
  </div>
</div>

<div class="banner-margin">
  <div class="wrapper" data-controller="settings">

    <%= render "shared/setting-card-frequency"%>
    <%= render "shared/edit-setting-card-frequency"%>
    <%= render "shared/setting-card-payment"%>
    <%= render "shared/edit-setting-card-payment"%>

