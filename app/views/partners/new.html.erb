<div class="wrapper">
  <div class="form-wrapper">
    <h5>Create your partner's profile</h5>

    <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8YXZhdGFyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60" alt="avatar" class="avatar form-avatar">

    <%= simple_form_for [@partner] do |f| %>
      <%= f.input :name, placeholder: "Your partner's name" %>
      <%= f.input :email, placeholder: "Your partner's email" %>
      <%= f.input :location, placeholder: "Your partner's address" %>
      <%= f.input :birthday, placeholder: "Your partner's birthday" %>
      <%= f.input :phone_number, placeholder: "Your partner's phone number" %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create Partner", class: "btn btn-flat" %>
    <% end %>
  </div>
</div>
