<div class="wrapper">
  <div class="form-wrapper">
    <h5>Edit <%= @partner.name %>'s profile</h5>

    <%= @partner.photo.attached? ? cl_image_tag(@partner.photo.key, class: "avatar form-avatar") : image_tag("partner_default.png", class: "avatar form-avatar") %>

    <%= simple_form_for [@partner] do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :location %>
    <%= f.input :phone_number %>
    <%= f.input :photo, as: :file, hint: "Upload new photo" %>
    <%= f.submit "Save Changes", class: "btn btn-flat" %>
    <% end %>

    <%= link_to "Delete #{@partner.name}", partner_path(@partner), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your relationship with #{@partner.name}?"}, style:"font-size: 8px", class: "mt-2" %>
  </div>
</div>
