<div class="wrapper">
  <div class="form-wrapper">
    <h5>Edit <%= @partner.name %>'s profile</h5>
    <%= simple_form_for(@partner) do |f| %>
      <div class="form-inputs">
        <div class="edit-avatar" data-controller="change-avatar">
          <%= @partner.photo.attached? ? cl_image_tag(@partner.photo.key, class: "avatar form-avatar") : image_tag("partner_default.png", class: "avatar form-avatar") %>
          <p><i class="fa-solid fa-camera" data-action="click->change-avatar#revealForm"></i></p>
          <div class="d-none" data-change-avatar-target="form">
            <%= f.input :photo, as: :file, label: false, hint: "Upload new photo" %>
          </div>
        </div>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :location %>
        <%= f.input :phone_number %>
      </div>
      <%= f.button :submit, "Update", class: "btn btn-flat" %>
    <% end %>

    <%= link_to "Edit interests", partner_keywords_path(@partner), style:"font-size: 16px", class: "mt-2" %>
    <%= link_to "Delete #{@partner.name}", partner_path(@partner), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your relationship with #{@partner.name}?"}, style:"font-size: 8px", class: "mt-2" %>

  </div>
</div>
